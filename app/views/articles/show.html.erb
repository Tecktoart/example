<%- model_class = Article -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @article.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:short_description) %>:</strong></dt>
  <dd><%= @article.short_description%></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @article.description %></dd>
</dl>

<%= link_to 'Back', articles_path, class:'btn btn-default'%>
<%= link_to 'Edit', edit_article_path(@article), class:'btn btn-default' %>
<%= link_to 'Destroy', article_path(@article), :method => 'delete', class:'btn btn-danger' %>
