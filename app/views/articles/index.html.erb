

<% @articles.each do |article| %>
<section class="articles" style="margin-left: 100px; word-wrap: break-word">
    <header class="article_header">
        <img style="float: right; border-radius: 50%; width: 60px; height: 60px" href=<%= image_tag article.user.avatar.url, style: :medium %></img>
        <h2><%=link_to article.name, article_path(article)%></h2>
        <p style="color: grey">Create on <%=l article.created_at, format: :short %> | by <%=article.user.username %></p>
    </header>
  <div class="article_description">
    <p>
      <%= article.short_description%>
    </p>
  <% if user_signed_in? %>
    <%= link_to edit_article_path(article) do %>
        <span class="glyphicon glyphicon-pencil"></span>
    <% end %>

    <%= link_to article_path(article),class:'glyphicon glyphicon-remove', method: :delete  do%>
    <% end %>


    <% if current_user.likes?(article) %>
        <%= link_to "/unlike/#{article.id}", method: :post do %>
            <span class="glyphicon glyphicon-thumbs-up" style="color: red"></span>
        <% end %>
    <% else %>
        <%= link_to "/like/#{article.id}", method: :post do %>
            <span class="glyphicon glyphicon-thumbs-up" style="color: green"></span>
        <% end %>
    <% end %>
        <%= article.likes.count %>
  <% end %>



  </div>
</section>
<% end %>

<div style="margin-left: 100px"><%= will_paginate @articles, renderer: BootstrapPagination::Rails %></div>



