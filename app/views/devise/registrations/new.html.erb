<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),html: { class: 'form-signup' }) do |f| %>
  <%= devise_error_messages! %>
    <h2>Sign up</h2>

    <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email address' %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password' %>
    <%= f.file_field :avatar, class:'form-control' %>

    <div><%= f.submit 'Sign Up', class: 'btn btn-lg btn-primary btn-block' %></div>
    <%= render "devise/shared/links" %>
<% end %>

